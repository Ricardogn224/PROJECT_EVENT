{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
    <h2>Services</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ service.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ service.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ service.prix }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ service.localisation }}</td>
            </tr>
            <tr>
                <th>Prestataire</th>
                <td>{{ service.user.nom ~ ' ' ~ service.user.prenom }}</td>
            </tr>
            <tr>
                <th>Evenement(s)</th>
                <td>
                    {% for event in service.evenements %}
                        {{ event.nom ~ ' | ' }}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a class="text-danger" href="{{ path('app_service_index') }}">Retouner</a>

    <a class="btn-edit" href="{{ path('app_service_edit', {'id': service.id}) }}">edit</a>
    <a class="btn-edit" href="{{ path('app_commentaire_new', {'service_id': service.id}) }}">Commenter</a>
   
    {{ include('service/_delete_form.html.twig') }}
{% endblock %}
