{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
    <h1>Service</h1></br>

    {% for message in app.flashes('demandeAttente') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    <div class="showServ">
        <table class="table">
            <tbody>
                <tr style="display:none;" class="showServId">
                    <th>Id</th>
                    <td>{{ service.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ service.nom }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ service.description }}</td>
                </tr>
                <tr>
                    <th>Prix</th>
                    <td>{{ service.prix }}</td>
                </tr>
                <tr>
                    <th>Localisation</th>
                    <td>{{ service.localisation }}</td>
                </tr>
                <tr>
                    <th>Prestataire</th>
                    <td>{{ service.user.nom ~ ' ' ~ service.user.prenom }}</td>
                </tr>
                <tr>
                    <th></th>
                    <td><img class="serviceImg"src="{{ vich_uploader_asset(service, 'imageFile') }}" alt="Article"></td>
                </tr>
            </tbody>
        </table>
    

    <a href="{{ path('app_home_demande', {'id': service.id}) }}">Faire une demande pour ce service</a>
    <a class="actFavShow"></a>
    </div>

{% endblock %}