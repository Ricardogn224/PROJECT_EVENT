{% extends 'base.html.twig' %}

{% block title %}Commentaire index{% endblock %}

{% block body %}
    <h2>Commentaires</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Commentaire</th>
                <th>Note</th>
                <th>Service_id</th>
                <th>User_id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.commentaire }}</td>
                <td>{{ commentaire.note }}</td>
                <td>{{ commentaire.serviceId }}</td>
                <td>{{ commentaire.userId }}</td>
                <td>
                    <a class="btn-show" href="{{ path('app_commentaire_show', {'id': commentaire.id}) }}">show</a>
                    <a class="btn-edit" href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn-default" href="{{ path('app_commentaire_new') }}">Cr√©er</a>
{% endblock %}
