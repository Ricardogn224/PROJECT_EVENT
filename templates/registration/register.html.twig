{% extends 'base.html.twig' %}

{% block title %}Création d'un compte{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="container-form-register">
        {{ form_start(registrationForm) }}
            <h2 class="form-register-title">Créer votre compte</h2>
            {{ form_row(registrationForm.nom, {label: 'Nom:'}) }}
            {{ form_row(registrationForm.prenom, {label: 'Prénom:'}) }}
            {{ form_row(registrationForm.email, {label: 'Email:'}) }}
            {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe:'}) }}

            <div class="flex">
                <button type="submit" class="btn-default">Créer</button>
            </div>
        {{ form_end(registrationForm) }}
    </div>
    
{% endblock %}
