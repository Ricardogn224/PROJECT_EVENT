{% extends 'base.html.twig' %}

{% block title %}Service index{% endblock %}

{% block body %}
    <h1>Mes services</h1>

    <table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Description</th>
            <th>Prix</th>
            <th>Localisation</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
    {% for service in services %}
        <tr>
            <td>{{ service.id }}</td>
            <td>{{ service.nom }}</td>
            <td>{{ service.description }}</td>
            <td>{{ service.prix }}</td>
            <td>{{ service.localisation }}</td>
            <td>
                <a href="{{ path('app_service_account_show', {'id': service.id}) }}">show</a>
                <a href="{{ path('app_service_account_edit', {'id': service.id}) }}">edit</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="6">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
    </table>

    <a href="{{ path('app_service_account_new') }}">Create new</a>

{% endblock %}
