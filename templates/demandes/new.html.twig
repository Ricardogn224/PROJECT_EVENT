{% extends 'base.html.twig' %}

{% block title %}New Demandes{% endblock %}

{% block body %}
    <h2>Nouvelle demande</h2>

    <h3>Liste des dates disponibles :</h3>
    <div class="choose-date">
    <ul class ="dispo-list">
    {% for serviceDispo in serviceDispos %}
        {% if serviceDispo.libre %}
        <li><strong>{{ serviceDispo.date|date("d-m-Y", "Europe/Paris") }}</strong><p class="hidden-date">{{ serviceDispo.date|date("Y-m-d", "Europe/Paris") }}</p> <a class="date-chosen notChosen">Choisir</a></li>
        {% endif %}
    {% endfor %}
    </ul>
    </div></br>

    <strong>Sélectionnez une heure de début et de fin :</strong>
    {{ include('demandes/_form.html.twig') }}

    <a class="text-danger" href="{{ path('app_demandes_index') }}">Retourner</a>
{% endblock %}
