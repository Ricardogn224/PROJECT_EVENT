{% extends 'base.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block body %}
    <h2>Evenements</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.id }}</td>
                <td>{{ evenement.nom }}</td>
                <td>
                    <a class="btn-show" href="{{ path('app_evenement_show', {'id': evenement.id}) }}">Afficher</a>
                    <a class="btn-edit" href="{{ path('app_evenement_edit', {'id': evenement.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="flex jce">
        <a class="btn-default" href="{{ path('app_evenement_new') }}">Cr√©er</a>
    </div>
{% endblock %}
