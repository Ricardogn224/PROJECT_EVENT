{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
    <h1>Message</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ message.message }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ message.date ? message.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div>
        <a class="btn-show" href="{{ path('app_message_index') }}">Retourner</a>
        <a class="btn-edit" href="{{ path('app_message_edit', {'id': message.id}) }}">Modifier</a>
    </div>

    {{ include('message/_delete_form.html.twig') }}
{% endblock %}
