{% block title %}Disponibilite{% endblock %}

{% block body %}
    <h2>Disponibilite</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ disponibilite.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ disponibilite.date ? disponibilite.date|date('Y-m-d') : '' }}</td>
